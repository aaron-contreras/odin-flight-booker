<div class="row">
  <%= form_with url: flights_path, method: :get do |f| %>
    <div class="input-field col s2">
      <%= f.select :departure_airport, Airport.all.map(&:code) %>
      <%= f.label :departure_airport %>
    </div>
    <div class="input-field col s2">
      <%= f.select :arriving_airport, Airport.all.map(&:code) %>
      <%= f.label :arriving_airport %>
    </div>
    <div class="input-field col s2">
      <%= f.select :passengers, (1..4) %>
      <%= f.label :passengers %>
    </div>
    <div class="input-field col s4">
      <%= f.select :departure_date, options_from_collection_for_select(Flight.departure_times, :departure_time, :formatted_date) %>
      <%= f.label :departure_date, 'Date' %>
    </div>
    <div class="input-field col">
      <%= f.submit class: 'waves-effect waves-light btn' %>
    </div>
  <% end %>
</div>
<div class="row">
</div>
